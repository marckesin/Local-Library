extends layout

block content
  h1=title

  form(method='POST' action='')
    section.form-group
      label.fw-bold(for='first_name') First Name:
      input#first_name.form-control.mb-3(type='text' placeholder='First name (Christian) last' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) autofocus)
      label.fw-bold(for='family_name') Family Name:
      input#family_name.form-control.mb-3(type='text' placeholder='Family name (surname)' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    section.form-group
      label.fw-bold(for='date_of_birth') Date of birth:
      input#date_of_birth.form-control.mb-3(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
      label.fw-bold(for='date_of_birth') Date of death:
      input#date_of_birth.form-control.mb-3(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg