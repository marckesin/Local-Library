  div.card.shadow-lg
    h5.card-header #{author.name}
      small.text-muted.ms-5 #{author.lifespan}
    div.card-body
      div.mt-1.ms-1
        h4.card-title Books
        dl
          each book in author_books 
            div.p-2.border.rounded-2.mb-1.bg-light
              dt
                a(href=book.url) #{book.title}
